@model EmerList
@{
    ViewData["Title"] = "แก้ไขข้อมูล";
}

<h2>แก้ไขข้อมูลการรับแจ้งเหตุ</h2>

<form asp-action="Edit" asp-controller="Emergency" method="post">
    <div class="container">
        <div class="mb-3 col-2">
            <label asp-for="DateTime" class="form-label">วันที่</label>
            <input asp-for="DateTime" type="date" class="form-control">
        </div>
        <div class="mb-3 col-3">
            <label asp-for="Title" class="form-label">เรื่อง</label>
            <input asp-for="Title" type="text" class="form-control">
        </div>
        <div class="mb-3 col-4">
            <label asp-for="Description" class="form-label">รายละเอียด</label>
            <textarea asp-for="Description" type="text" class="form-control"></textarea>
        </div>
        <div class="mb-3 col-4">
            <label asp-for="Edit" class="form-label">การแก้ไข</label>
            <textarea asp-for="Edit" type="text" class="form-control"></textarea>
        </div>
        <div class="mb-3 col-3">
            <label asp-for="Recroder" class="form-label">ผู้บันทึก</label>
            <input asp-for="Recroder" type="text" class="form-control">
        </div>
        <button onclick="return confirm('เพิ่มข้อมูลเรียบร้อย') type="submit" class="btn btn-primary">Update</button>
    </div>
</form>

