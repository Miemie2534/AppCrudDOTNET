@model IEnumerable<Employee>
@{
    ViewData["Title"] = "ข้อมูลพนักงาน";
}

<a asp-action="CreateEmployee" class="btn btn-success mt-4 mb-3">Create</a>

@if (Model.Count() > 0)
{
    <h2>ข้อมูลพนักงาน</h2>

    <div class=" table-responsive">
        <table class="table table-sm table container mt-4">
            <thead>
                <tr>
                    <th class="text-center">รหัสพนักงาน</th>
                    <th class="text-center">วันที่</th>
                    <th class="text-center">ชื่อ</th>
                    <th class="text-center">นามสกุล</th>
                    <th class="text-center">แผนก</th>
                    <th class="text-center">อาการ</th>
                    <th class="text-center">รายละเอียด</th>
                    <th class="text-center">นำส่ง</th>
                    <th class="text-center">สถานะ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model)
                {
                    <tr class="text-center">
                        <th>@emp.Id</th>
                        <td>@emp.EmployeeId</td>
                        <td>@emp.Firstname</td>
                        <td>@emp.Lastname</td>
                        <td>@emp.Department</td>
                        <td>@emp.Title</td>
                        <td>@emp.Description</td>
                        <td>@emp.Hospital</td>
                        <td>
                            <a class="p-2"
                               asp-action="Edit"
                               asp-controller="Employee"
                               asp-route-id="@emp.Id"><img src="/edit.png" /></a>
                            <a class="p-2"
                               asp-action="Delete"
                               asp-controller="Employee"
                               asp-route-id="@emp.Id" onclick="return confirm('คุณแน่ใจว่าจะลบ @emp.Firstname หรือไม่ ?')"><img src="/delete.png" /></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-secondary">ไม่มีข้อมูลพนักงานในระบบ</div>
}

