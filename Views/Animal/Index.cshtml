@model IEnumerable<Animal>
@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-success mt-4 mb-3" asp-action="Create">Create</a>

@if (Model.Any())
{
    <h2>ข้อมูลสัตว์ (แมว)</h2>

    <table class="table text-center">
        <thead>
            <tr>
                <th>วันที่</th>
                <th>ผู้แจ้ง</th>
                <th>รายละเอียด</th>
                <th>สถานที่</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var animal in Model)
            {
                <tr>
                    <td>@animal.Date.ToShortDateString()</td>
                    <td>@animal.Name</td>
                    <td>@animal.Description</td>
                    <td>@animal.Area</td>

                    <td>
                        <a asp-action="Details" asp-route-id="@animal.Id"><img src="/image2.png" width="30" /></a> |
                        <a asp-action="Edit" asp-route-id="@animal.Id"><img src="/edit.png" width="25" /></a> |
                        <a asp-action="Delete" asp-controller="Animal" asp-route-id="@animal.Id"><img src="/delete.png" width="25" /></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-secondary">ไม่มีข้อมูลแสดง</div>
}



