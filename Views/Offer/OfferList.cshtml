@model IEnumerable<Offer>
@{
    ViewData["Title"] = "ข้อมูลเสนอต่างๆ";
}

<a asp-action="OfferCreate" asp-controller="Offer" class="btn btn-success mt-4 mb-3">Create</a>

@if (Model.Count() > 0)
{
    <h2>ข้อมูลงานเสนอต่างๆ</h2>
    <div class=" table-responsive">
        <table class="table table-sm table container mt-4">
            <thead>
                <tr>
                    <th class="text-center">ลำดับ</th>
                    <th class="text-center">วันที่</th>
                    <th class="text-center">รายการ</th>
                    <th class="text-center">รายละเอียด</th>
                    <th class="text-center">ผู้บันทึก</th>
                    <th class="text-center">สถานะ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <th>@item.Id</th>
                        <td>@item.DateTime</td>
                        <td>@item.Select</td>
                        <td>@item.Description</td>
                        <td>@item.Name</td>
                        <td>
                            <a class="p-2" asp-action="Edit"
                               asp-controller="Offer"
                               asp-route-id="@item.Id"><img src="/edit.png" width="30" /></a>
                            <a class="p-2" asp-action="Delete"
                               asp-controller="Offer"
                               asp-route-id="@item.Id" onclick="return confirm ('คุณแน่ใจว่าจะลบ @item.Id หรือไม่ ?')"><img src="/delete.png" width="30" /></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-secondary">ไม่มีข้อมูลแสดง</div>
}

